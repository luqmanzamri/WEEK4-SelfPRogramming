package scanner;
import java.util.Scanner;
class Exercise2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int no;
		double no2;
		int result;
		
		Scanner scan = new Scanner (System.in);
		
		System.out.println("Enter an integer : ");
		no = scan.nextInt();
		System.out.println("Using nextinteger(): "  + no);
		
		System.out.println("Enter double  value : ");
		no2 = scan.nextDouble();
		System.out.println("Using nextdouble(): "  + no2);
		
		System.out.println("Using nextinteger() increment by 1 : "  + ++no);
		System.out.println("Using nextdouble() decrement by 1 : "  + --no2);
		
		System.out.println("Using nextinteger() increment by 5 : "  + (no + 5));
		System.out.println("Using nextdouble() decrement by 5 : "  + (no2 - 5));
		
		// boleh buat cara ini : no no%10; , output = S.O.P("bla bla :" no);
		// no2 = no2%10
		System.out.println("Using nextinteger() mod  10 : "  + (no - no % 10));
		System.out.println("Using nextdouble() mod by 10 : "  + (no2 = no2 %10 ));
		
		double y = Math.pow(no, no2);
		System.out.println(y);
		
				
				

	}

}
